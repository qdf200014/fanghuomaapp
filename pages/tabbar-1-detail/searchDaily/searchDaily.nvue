							</view>
						</view>
					</cell>
				</template>
			</wt-list>
		</view>
		<uni-popup ref="popupsearchnews" type="center">
			<wt-dialog :maskClick='true' :btns="['取消','确定']" @close="wtDialogConfirm" title="提示" @confirm="refreshSearch">
				<view class="flex flex-column justify-center align-center" style="padding-bottom: 32rpx;">
					<text style="font-size: 26rpx;font-weight: 400;color: #030303;">查看{{this.name}}的所有日报</text>
				</view>
			</wt-dialog>
		</uni-popup>
		<uni-popup :animation="false" type="bottom" ref="searchPage">
			<view class="position-fixed top-0 left-0 right-0 bottom-0">
				<search-more :guid="guid" :name="name"></search-more>
			</view>
		</uni-popup>
	</view>
</template>

<script>
	import dayjs from 'dayjs'
	import searchMore from './searchMore.nvue';
	import {
		throttle
	} from "@/common/common.js";
	export default {
		data() {
			return {
				key: '', //搜索的关键字
				startTime: '', //开始时间
				endTime: '', //结束时间
				isRead: -1, //是否已读
				orgId: 0, //管理角色
				name: '',
				guid: '',
				userID: '',
			}
		},
		components: {
			searchMore
		},
		mounted() {
			let userInfo = this.$store.state.user.info;
			this.userID = userInfo.userId;
		},
		onShow(){
			this.$refs.searchReadList.refreshData();
		},
		onLoad(e) {
			this.key = e.key;
			this.startTime = e.publishstart;
			if (e.publishend != '') {
				let end = e.publishend + '23:59:59';
				this.endTime = dayjs(end).add(1, 'day').format('YYYY-MM-DD')
			} else {
				this.endTime = ''
			}

			this.isRead = e.IsReaded;
			this.orgId = e.orgId;
		},
		methods: {
			searchList(item, items, index) {
				if (item.dailyType == 1) {
					uni.navigateTo({
						url: '../forestDetail/forestDetail?dailyId=' + item.dailyId
					})
					if(this.isRead== 0){
						setTimeout(() => {
							items.dailys.splice(index, 1);
						}, 2000);
					}else{
						return
					}
				} else if (item.dailyType == 0) {
					uni.navigateTo({
						url: '../dailynewsDetail/dailynewsDetail?dailyId=' + item.dailyId
					})
					if(this.isRead== 0){
						setTimeout(() => {
							items.dailys.splice(index, 1);
						}, 2000);
					}else{
						return
					}
				}
			},
			searchprise: throttle(function(item, event) {
				// #ifdef APP-NVUE
				event.stopPropagation()
				// #endif
				uni.$api.dailynews.addprise({
						dailyId: item.dailyId
					})
					.then(res => {
						console.log(res, '点赞成功');
						item.priseNum++;
						item.isPrised = true;
					})
					.catch(err => {
						console.log(err)
					})
			}),
			dataTrn(time) {
				return dayjs(time).format('YYYY/MM/DD HH:mm');
			},
			searchprised: throttle(function(item, event) {
				// #ifdef APP-NVUE
				event.stopPropagation()
				// #endif
				uni.$api.dailynews.delprise({
						dailyId: item.dailyId
					})
					.then(res => {
						console.log(res);
						item.priseNum--;
						item.isPrised = false;
					})
					.catch(err => {
						console.log(err)
					})
			}),
			looksearch(item, event) {
				// #ifdef APP-NVUE
				event.stopPropagation()
				// #endif
				console.log('111', item);
				this.name = item.userName;
				this.guid = item.userId;
				this.$refs.popupsearchnews.open();
			},
			refreshSearch(done, val, index) {
				done();
				this.$refs.searchPage.open();
			},
			leftBack() {
				uni.navigateBack(1)
			}
		}
	}
</script>

