	<view class="flex flex-1 w-100 flex-column">
		<uni-nav-bar left-icon="back" title="日报" :statusBar="true" @clickLeft="leftBack"></uni-nav-bar>
		<!-- 	<view style="height: 56rpx;background-color: #FDEBE5;" class="pl-3 flex flex-row justify-between align-center pr-3">
